<div class="wrapper" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url('<%= image_path "Arene.jpg" %>')";>
  <div class="form">
    <h2 class='title'>Nouveau combat</h2>
    <div class="row text-center">
      <%= link_to personnages_path do %>
        <i class="fas fa-undo"></i>
      <% end %>
    </div>
    <br>
    <div class="content background">
      <%= form_for @combat do |f| %>
        <% number = 0 %>
        <%= f.simple_fields_for :joueurs do |joueurs_form| %>
          <% number += 1 %>
          <div class="player grid">
            <h3>Joueur <%= number %></h3>
            <%= joueurs_form.collection_select :personnage_id, Personnage.all, :id, :nom %>
            <h3>Arme</h3>
              <%= joueurs_form.collection_select :arme_id, Arme.all, :id, :nom %>
            <h3>Bouclier</h3>
            <%= joueurs_form.collection_select :bouclier_id, Bouclier.all, :id, :nom %>
          </div>
        <% end %>
        <br>
        <%= f.submit "Let's go ! ðŸš€", class: 'btn btn-primary'%>
      <% end %>
    </div>
  </div>
</div>
