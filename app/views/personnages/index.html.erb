<div class="wrapper" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url('<%= image_path "Arene.jpg" %>');">
  <div class="container content">
    <h2 class='text-center title'>Tous les personnages !</h2>
    <div class="row text-center">
      <%= link_to root_path do %>
        <i class="fas fa-undo"></i>
      <% end %>
    </div>
    <br>
    <div class="link">
      <%= link_to "CrÃ©er un nouveau personnage", new_personnage_path, class: 'btn btn-flat' %>
      <%= link_to "Commencer un combat", new_combat_path, class: 'btn btn-combat' %>
    </div>
    <br>
    <div class="cards">
      <% @personnages.each do |personnage| %>
        <%= link_to personnage_path(personnage) do %>
          <div class="card-trip">
            <%= cl_image_tag personnage.photo, height: 300, width: 400 %>
            <div class="card-trip-infos">
              <h2><%= personnage.nom %></h2>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
